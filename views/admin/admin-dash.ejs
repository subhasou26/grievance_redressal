<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Admin Dashboard</title>
    <link rel="stylesheet" href="/css/admin-dash.css">
</head>
<body>
    <header class="header">
        <div class="header-left">
            <button class="menu-btn" id="menu-btn">&#9776;</button>
            <h1><b>ComplaintConnect</b></h1>
        </div>
        <div class="header-right">
            <span>Welcome, Admin</span>
            <a href="#" id="about-us-link">About Us</a>
            <a href="#" id="change-password-link">Change Password</a>
            <button id="logout-btn">Logout</button>
        </div>
    </header>

    <!-- Navigation bar -->
    <nav class="nav-bar" id="nav-bar">
        <ul>
            <li class="profile-btn">
                <a href="profile.html">
                <button class="profile-button">
                    <img src="profile-icon.png" alt="Profile Icon" width="30" height="30" style="border-radius: 50%;">
                </button>
                <span>Your Profile</span>
            </li>

            <li><a href="#" id="create-user-link">Create User</a></li>
            <li><a href="#">Delete User</a></li>
            <li>
                <label for="theme-switch">Dark Mode</label>
                <label class="toggle-switch">
                    <input type="checkbox" id="theme-switch">
                    <span class="slider"></span>
                </label>
            </li>
        </ul>
    </nav>

    <!-- Create User Form -->
    <form id="create-user-form">
        <label for="name">Name</label>
        <input type="text" id="name" name="name" required>

        <label for="email">Email</label>
        <input type="email" id="email" name="email" required>

        <label for="role">Role</label>
        <select id="role" name="role">
            <option value="admin">Admin</option>
            <option value="user">User</option>
        </select>

        <div id="error-message"></div>

        <button type="submit">Create User</button>
    </form>

    <!-- Container for rectangles -->
    <div class="container">
        <div class="box active-complaints">
            <h2>Total Active Complaints</h2>
            <p>25</p> <!-- Replace with dynamic content -->
        </div>
        <div class="box resolved-complaints">
            <h2>Resolved & In-Progress Complaints</h2>
            <p>50</p> <!-- Replace with dynamic content -->
        </div>
    </div>

    

    <!-- Table with Search -->
    <div class="table-container">
        <div class="search-container">
            <input type="text" id="search-bar" placeholder="Search by Complaint No...">
        </div>
        <table>
            <thead>
                <tr>
                    <th>Sr No</th>
                    <th>Complaint No</th>
                    <th>Status</th>
                </tr>
            </thead>
            <tbody>
                <tr>
                    <td>1</td>
                    <td>12345</td>
                    <td>Active</td>
                </tr>
                <tr>
                    <td>2</td>
                    <td>67890</td>
                    <td>Resolved</td>
                </tr>
                <!-- Add more rows as needed -->
            </tbody>
        </table>
    </div>

   <script src="/js/admin-dash.js"></script>
</body>
</html>