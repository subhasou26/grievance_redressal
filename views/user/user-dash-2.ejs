<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>User Dashboard</title>
    <link rel="stylesheet" href="/css/user-dash.css">
    <script src="/js/user-dash.js" defer></script>
</head>
<script>
    const complaints = <%- JSON.stringify(complaint) %>
</script>
<body>
    <div class="header">
        <div class="logo">
            <img src="https://www.biyanitechnologies.com/img/gecr16a.jpg" alt="Government Logo">
            <h1>Complaint Connect</h1>
            <br>
            <h2><%= public_user.name %></h2>
        </div>
        <button class="hamburger" onclick="toggleSidebar()">â˜°</button>
        <div class="user-info">
            <p id="welcome-message"></p>
        </div>
    </div>

    <div class="container">
        <div class="sidebar" id="sidebar">
            <ul>
                <li><a href="#">Appeal Dashboard</a></li>
                <li><a href="#" id="lunch_complaint">Lodge Public Grievance</a></li>
                <li><a href="#">Lodge Appeal</a></li>
                <li><a href="#">Account Activity</a></li>
                <li><a href="#">Edit Profile</a></li>
                <li><a href="#">Change Password</a></li>
                <li><a href="/api/complaint/map">Grievances Map</a></li>
                <li><a href="#" id="sign-out">Sign out</a></li>
            </ul>
        </div>

        <div class="main-content">
            <div class="dashboard-cards">
                <div class="card total-registered">
                    <h2 id="total-registered">0</h2>
                    <p>Total Grievances Registered</p>
                </div>
                <div class="card pending">
                    <h2 id="pending-grievances">0</h2>
                    <p>Number of Grievances Pending</p>
                </div>
                <div class="card closed">
                    <h2 id="closed-grievances">0</h2>
                    <p>Number of Grievances Closed</p>
                </div>
            </div>

            <div class="grievances-table">
                <h3>List of Grievances</h3>
                <div class="search-bar">
                    <input type="text" id="search-input" placeholder="Search by Complaint Number">
                    <button onclick="searchGrievance()">Search</button>
                </div>
                <table>
                    <thead>
                        <tr>
                            <th>Complaint Number</th>
                            <th>Description</th>
                            <th>Status</th>
                            <th>Image</th>
                        </tr>
                    </thead>
                    <tbody id="complaints-table-body">
                        <% for (let complain of complaint) { %>
                            <tr>
                                <td><%= complain.complaintNumber %></td>
                                <td><%= complain.description %></td>
                                <td><%= complain.status %></td>
                                <td>
                                    <% if (complain.attachments) { %>
                                        <a href="<%=complain.attachments %>" target="_blank">
                                            View Image
                                        </a>
                                    <% } else { %>
                                        No Image Available
                                    <% } %>
                                </td>
                                <td style="display: none;"><%= complain.response %></td>
                            </tr>
                        <% } %>
                    </tbody>
                    <tbody id="grievances-list">
                        <!-- Dynamic content will be inserted here -->
                    </tbody>
                </table>
            </div>
        </div>
    </div>

    <div id="complaint-modal" class="modal">
        <div class="modal-content">
            <span class="close" id="modal-close">&times;</span>
            <h2>Complaint Details</h2>
            <p><strong>Complaint Number:</strong> <span id="modal-complaint-number"></span></p>
            <p><strong>Description:</strong> <span id="modal-description"></span></p>
            <p><strong>Status:</strong> <span id="modal-status"></span></p>
            <p><strong>Response:</strong> <span id="modal-responce"></span></p>
        </div>
    </div>
    <!-- Floating Lodge Complaint Button for Phones -->
    <div id="floating-button" onclick="location.href='/api/complaint'">+</div>

    <script>
        function toggleSidebar() {
            document.getElementById('sidebar').classList.toggle('open');
        }
    </script>
</body>
<script src="/js/user-dash.js"></script>
</html>
